<?xml version="1.0"?>
<registry
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="design.plone.policy">

    <records interface="design.plone.policy.interfaces.IDesignPlonePolicySettings"/>

    <record name="plone.show_excluded_items"
            interface="Products.CMFPlone.interfaces.controlpanel.INavigationSchema"
            field="show_excluded_items" purge="False">
        <value>False</value>
    </record>

    <record name="plone.enable_sitemap">
        <value>True</value>
    </record>

    <record name="plone.allowed_sizes" interface="Products.CMFPlone.interfaces.controlpanel.IImagingSchema" field="allowed_sizes">
      <value purge="true">
        <element>listing 16:16</element>
        <element>icon 32:32</element>
        <element>tile 64:64</element>
        <element>thumb 128:128</element>
        <element>mini 200:200</element>
        <element>preview 400:400</element>
        <element>teaser 600:600</element>
        <element>large 800:800</element>
        <element>larger 1000:1000</element>
        <element>great 1200:1200</element>
        <element>huge 1600:1600</element>
      </value>
    </record>

</registry>
